<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/orderNoTxtView"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".OrderHistory">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/titleToolbar"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:background="?attr/colorPrimary"
        android:minHeight="?attr/actionBarSize"
        android:theme="?attr/actionBarTheme"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/orderHistoryTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_marginStart="24dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="24dp"
        android:layout_marginBottom="8dp"
        android:background="?attr/colorPrimary"
        android:text="@string/title_order_history"
        android:textColor="@color/white"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="@+id/titleToolbar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/titleToolbar"
        app:layout_constraintTop_toTopOf="@+id/titleToolbar" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/orderHistoryRecyclerView"
        android:layout_width="match_parent"
        android:layout_height="616dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/orderNumTxtView"
        android:layout_width="64dp"
        android:layout_height="36dp"
        android:layout_marginStart="4dp"
        android:text="@string/order_no"
        app:layout_constraintBottom_toTopOf="@+id/orderHistoryRecyclerView"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/orderHistoryTitle" />

    <TextView
        android:id="@+id/priceTxtView"
        android:layout_width="48dp"
        android:layout_height="24dp"
        android:layout_marginStart="24dp"
        android:text="@string/date"
        app:layout_constraintBottom_toTopOf="@+id/orderHistoryRecyclerView"
        app:layout_constraintStart_toEndOf="@+id/orderNumTxtView"
        app:layout_constraintTop_toBottomOf="@+id/titleToolbar" />

    <TextView
        android:id="@+id/dateTxtView"
        android:layout_width="48dp"
        android:layout_height="24dp"
        android:layout_marginStart="32dp"
        android:text="@string/price"
        app:layout_constraintBottom_toTopOf="@+id/orderHistoryRecyclerView"
        app:layout_constraintStart_toEndOf="@+id/priceTxtView"
        app:layout_constraintTop_toBottomOf="@+id/titleToolbar" />

    <TextView
        android:id="@+id/statusTxtView"
        android:layout_width="48dp"
        android:layout_height="24dp"
        android:layout_marginStart="32dp"
        android:text="@string/status"
        app:layout_constraintBottom_toTopOf="@+id/orderHistoryRecyclerView"
        app:layout_constraintStart_toEndOf="@+id/dateTxtView"
        app:layout_constraintTop_toBottomOf="@+id/titleToolbar" />

    <Spinner
        android:id="@+id/orderHistorySorter"
        android:layout_width="72dp"
        android:layout_height="48dp"
        android:layout_marginStart="32dp"
        android:layout_marginEnd="32dp"
        android:contentDescription="@string/sort_by"
        app:layout_constraintBottom_toTopOf="@+id/orderHistoryRecyclerView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/statusTxtView"
        app:layout_constraintTop_toBottomOf="@+id/titleToolbar" />

</androidx.constraintlayout.widget.ConstraintLayout>